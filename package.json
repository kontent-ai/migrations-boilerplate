{
  "name": "kontent-migrations-boilerplate",
  "version": "1.1.1",
  "description": "Boilerplate with migration samples",
  "main": "index.ts",
  "scripts": {
    "migrate:all": "tsc && kontent migration run --all --environment DEV",
    "migrate:range": "tsc && kontent migration run --environment DEV --range",
    "migrate": "tsc && kontent migration run --environment DEV -n",
    "lint": "tslint --project tsconfig.json --fix \"Migrations/*.ts\" && prettier --write \"Migrations/**/*.ts\"",
    "lint-check": "tslint --project tsconfig.json \"Migrations/*.ts\" && prettier --check \"Migrations/**/*.ts\"",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix --project tsconfig.json",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "keywords": [
    "migrations",
    "kontent",
    "cli"
  ],
  "author": "Kentico",
  "license": "MIT",
  "dependencies": {
    "@kentico/kontent-cli": "0.5.0",
    "@kentico/kontent-management": "^2.0.2",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3"
  }
}
